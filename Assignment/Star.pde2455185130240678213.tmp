class Star
{
   PVector pos;
   float speed;
   float starW=1;
   float starH=1;
   float Brightness[] = new float[100];
   float starX[]=new float[100];
   float starY[]=new float[100];
   
   Star()
   {
     //give the star a random position on the battlefield
     pos=new PVector(random(0,width),random(0,height));
     //random speeds
     speed=random(2,4);
   }
   
   //controls movement of stars accross screen
   void move()
   {
     fill(255);
     stroke(255);
     
     rect(pos.x,pos.y,starW,starH);
     
     //change x position by -speed, looks like stars flying by
     pos.y+=speed;
      
     if(pos.y+starW>height)
     {
        //reset stars to side of screen
        pos.y=0;
        //give the stars a new y position
        pos.x=random(0,width);
     }

   }
   
   void initialFStars()
   {
       for(int i=0;i<100;i++)
       {
          Brightness[i]=random(5,255);
          stroke(Brightness[i]);
          float x=random(0,width);
          float y=random(height);
          point(x,y);
          starX[i]=x;
          starY[i]=y;
       }
   }
   
   
   void flicker()
   {
      for(int i=0;i<100;i++)
      {
         stroke(Brightness[i]+random(-5,10));
         float x=starX[i];
         float y=starY[i];
         point(x,y);
      }
   }
}